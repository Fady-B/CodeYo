@using CodeYoDAL.DALHelpers;
@{
    ViewData["Title"] = MainMenu.Teachers.PageName;
}
<div class="wrapper">
    <div class="panel panel-hash">
        <div class="panel-heading">

            <div class="card shadow-lg hover-card m-inline-auto-p-0 m-1">
                <div class="card-body">

                    <div class="row mb-3">
                        <div class="col-md-12 text-center ">
                            <button type="button" onclick="AddEdit(0)" class="btn btn-success btn-block w-fit">
                                <span class="bi bi-plus" style="color:white;"></span>
                                <span>Add Teacher</span>
                            </button>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12 text-center ">
                            <h5 class="text-center"><b>@MainMenu.Teachers.PageName</b></h5>
                        </div>
                    </div>
                </div>

            </div>
        </div>


        <div class="row">
            <div class="col-md-12 text-center">
                <div class="panel-body scroll panel-height table-wrap p-3">
                    <table id="tblTeacher" class="display nowrap" style="width:100%">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Full Name</th>
                                <th>Phone Number</th>
                                <th>Business Phone Number</th>
                                <th>Subject Name</th>
                                <th>Students Count</th>
                                <th>Creation Date</th>
                                <th>Edit</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>


    </div>
</div>

<style>
    .panel-heading {
        padding: 0px 0px 0px 5px;
    }

    .panel-body {
        padding: 5px;
    }

    .h4 {
        margin-top: 1px;
        margin-bottom: 1px;
    }

    #tblTeacher th {
