@model CodeYoDAL.ViewModels.StudentsViewModel;

<div>
    <div class="row">
        <div class="col-md-12">
            <form id="frmStudent">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="CreatedDate" />
                <input type="hidden" asp-for="CreatedBy" />


                <div class="row">
                    <div class="col-6 col-sm-6">

                        <div class="form-group row">
                            <div class="input-group">
                                <input required type="text" name="ArName" asp-for="ArName" autocomplete="off" class="input">
                                <label asp-for="ArName" class="user-label">Ar Name</label>
                            </div>
                            <span asp-validation-for="ArName" class="text-danger"></span>
                        </div>


                        <div class="form-group row">
                            <div class="input-group">
                                <input type="text" name="EnName" asp-for="EnName" autocomplete="off" class="input">
                                <label asp-for="EnName" class="user-label">En Name</label>
                            </div>
                        </div>

                        <div class="form-group row" id="AllTeachersContainer">
                            <label class="">Student's Teachers</label>
                            <select class="js-example-basic-multiple select2 form-control"
                                    required
                                    id="AllTeachers"
                                    asp-items="@ViewBag.DdlTeachers" asp-for="TeachersIds" style="width: 100%;" style="width: 100%; color:black;"
                                    multiple="multiple">
                            </select>
                            <span asp-validation-for="TeachersIds" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-6 col-sm-6">

                        <div class="form-group row">
                            <div class="input-group">
                                <input required type="text" name="SerialNumber" asp-for="SerialNumber" autocomplete="off" class="input">
                                <label asp-for="SerialNumber" class="user-label">Serial Number</label>
                            </div>
                            <span asp-validation-for="SerialNumber" class="text-danger"></span>
                        </div>

                        <div class="form-group row">
                            <div class="input-group">
                                <input required type="text" name="UserName" asp-for="UserName" autocomplete="off" class="input">
                                <label asp-for="UserName" class="user-label">User Name</label>
                            </div>
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>

                        <div class="form-group row">
                            <div class="input-group">
                                <input required type="text" name="Password" asp-for="Password" autocomplete="off" class="input">
                                <label asp-for="Password" class="user-label">Password</label>
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                    </div>

                </div>
                <div class="form-group row mt-3">
                    <div class="col-sm-12">
                        <button type="button" id="btnSave" onclick="Save()" class="btn btn-success">
                            Save
                        </button>
                        <button type="button" id="btnClose" class="btn btn-danger" data-bs-dismiss="modal">
                            Close
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .select2-container--default .select2-selection--multiple .select2-selection__choice {
        color: black;
    }
</style>

<script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

<script>
    $(document).ready(function () {
        // InitialSelect2();
        // $('#AllTeachers').select2({
        //     placeholder: "Select",
        //     allowClear: true
        // });
        InitialPartialSelect2($("#AllTeachersContainer"));
    });
</script>
